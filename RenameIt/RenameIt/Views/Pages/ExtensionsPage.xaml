<Page x:Class="RenameIt.Views.Pages.ExtensionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RenameIt.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ExtensionsPage">

    <StackPanel>
        <TextBlock Text="{Binding VideoExtensionTitle}" Margin="5 0 0 0"/>
        <TextBox Style="{StaticResource MainTextBox}"
                 Tag="Add a video extension..."
                 Text="{Binding VideoExtensionsText}"/>

        <TextBlock Text="{Binding SubtitleExtensionsTitle}" Margin="5 10 0 0"/>
        <TextBox Style="{StaticResource MainTextBox}"
                 Tag="Add a subtitle extension..."
                 Text="{Binding SubtitleExtensionsText}"/>

        <TextBlock Text="*Extensions must be seperated by a comma and include the dot (.) prefix (.mp4, .avi)."
                   TextWrapping="Wrap"
                   FontSize="11"
                   Foreground="Gray"/>


    </StackPanel>
</Page>
